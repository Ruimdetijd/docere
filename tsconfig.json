{
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": true,
		"esModuleInterop": true,
		"importHelpers": true,
		"incremental": true,
		"jsx": "react",
		"module": "esnext",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"preserveConstEnums": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"target": "es6",
		"paths": {
			"@docere/*": ["packages/*/src"],
			"@docere/frontend": ["packages/frontend/src/export"],
		}
	},
	"exclude": [
		"build",
		"dist",
		"node_modules",
	]
}
