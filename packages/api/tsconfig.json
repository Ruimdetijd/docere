{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./build",
    "removeComments": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "types": []
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/index.ts",
    "src/indexer.ts",
    "src/types.d.ts",
    "src/tests"
  ]
}
