{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./build",
    "removeComments": true,
    "resolveJsonModule": true,
    "target": "es2017"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
  ],
  "types": [
    "puppeteer",
    "jest-environment-puppeteer",
    "expect-puppeteer"
  ]
}
