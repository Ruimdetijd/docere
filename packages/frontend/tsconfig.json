{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"importHelpers": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "react",
		"lib": [
			"DOM",
			"ES2020"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "./build",
		"removeComments": true,
		"resolveJsonModule": true,
		"target": "es6",
		"types": []
	},
	"exclude": [
		"./build",
		"./dist",
		"./node_modules"
	],
	"files": ["./src/index.tsx"]
}
